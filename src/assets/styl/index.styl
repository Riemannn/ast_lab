@require 'src/assets/styl/mixins'

nav
    background-color #F4F4F4
    box-shadow 0 0 5px #727272
    height 55px
    position fixed
    top 0
    width 100%
    z-index 2

#nav
    margin 0
    padding-top 18px
    padding-bottom 18px
    padding-left 0
    margin-left auto
    width 450px
    display inline-block
    position absolute

#social
    margin 0
    padding-top 18px
    padding-bottom 18px
    width 210px
    display inline-block
    float right
    padding-left 0
    margin-right auto

div
    margin auto
    width 1050px
    height 55px

#nav li
    text-align left
    display inline-block
    list-style-type none
    width 100px

#social li
    text-align right
    display inline-block
    list-style-type none
    width 50px

@media only screen and (max-width 1067px)
    div
        margin auto
        width 800px
        height 55px

    #nav
        margin 0
        padding-top 18px
        padding-bottom 18px
        padding-left 0
        margin-left auto
        width 290px
        display inline-block
        position absolute

    #social
        margin 0
        padding-top 18px
        padding-bottom 18px
        width 210px
        display inline-block
        float right
        padding-left 0
        margin-right auto

    #nav li
        text-align left
        display inline-block
        list-style-type none
        width 70px

    #social li
        text-align right
        display inline-block
        list-style-type none
        width 50px

@media only screen and (max-width 820px)
    div
        margin auto
        width 100%
        height 55px

    #nav
        margin 0
        padding-top 18px
        padding-bottom 18px
        padding-left 0
        margin-left auto
        width 100%
        display inline-block
        position absolute

    #social
        visibility hidden

    #nav li
        text-align center
        display inline-block
        list-style-type none
        width 24%

a
    text-decoration none
    color black

a hover
    color #BC9D74

#intro h1
    margin 0
    margin-left auto
    margin-right auto
    margin-top 55px
    text-align center
    padding-top 20px
    padding-bottom 20px
    width 500px
    font-size 40px
    background-color white
    opacity 0.7
    font-weight normal

@media only screen and (max-width 820px)
    #intro h1
        margin 0
        margin-left auto
        margin-right auto
        margin-top 55px
        text-align center
        padding-top 20px
        padding-bottom 20px
        width 300px
        font-size 30px
        background-color white
        opacity 0.7
        font-weight normal

    #intro
        width 100%
        padding-bottom 172px
        padding-top 173px
        background-position top
        background-image url('../html/img/intro.jpg')
        background-size cover

main
    width 1050px
    margin-left auto
    margin-right auto

aside
    margin-top 55px
    width 231px
    float right

aside img
    overflow hidden
    border-radius 50%
    width 230px
    height 230px

#titre
    padding-bottom 20px
    padding-top 20px
    font-size 20px
    margin 0
    text-align center
    width 230px
    border-style solid
    border-width 1px
    border-color #BC9D74
    margin-bottom 20px

#texte
    margin 0
    margin-top 20px
    text-align center
    width 230px
    line-height 25px

section
    width 768px

.art
    width 768px
    padding-top 55px
    padding-bottom 55px
    border-bottom-style solid
    border-bottom-color #E2E2E2
    border-bottom-width 1px

#box hover #img
    transform scale(1.1)

#box
    overflow hidden
    width 768px
    height auto

#img
    transition all 0.4s ease
    width 100%

.artTitre
    font-size 22px
    text-align center
    margin 0
    margin-bottom 20px

.artTexte
    width 708px
    margin auto
    text-align justify
    padding-top 20px

@media only screen and (max-width 1067px)
    main
        width 800px
        margin-left auto
        margin-right auto

    section
        width 518px

    .art
        width 518px
        padding-top 55px
        padding-bottom 55px
        border-bottom-style solid
        border-bottom-color #E2E2E2
        border-bottom-width 1px

    #box
        overflow hidden
        width 518px
        height auto

    .artTexte
        width 518px
        margin auto
        text-align justify
        padding-top 20px

@media only screen and (max-width 820px)
    main
        width 100%
        margin-left auto
        margin-right auto

    section
        width 100%

    aside
        margin-top 55px
        width 100%

    aside img
        overflow hidden
        border-radius 50%
        width 230px
        height 230px
        margin auto
        display block

    #titre
        padding-bottom 20px
        padding-top 20px
        font-size 20px
        margin 0
        text-align center
        width 230px
        border-style solid
        border-width 1px
        border-color #BC9D74
        margin auto
        margin-bottom 20px

    #texte
        margin 0
        text-align center
        width 230px
        line-height 25px
        margin auto
        margin-top 20px
        margin-bottom 50px

    .art
        width 100%
        padding-top 55px
        padding-bottom 55px
        border-bottom-style solid
        border-bottom-color #E2E2E2
        border-bottom-width 1px

    #box
        overflow hidden
        width 85%
        height auto
        margin-left auto
        margin-right auto
        display block

    .artTexte
        width 85%
        margin auto
        text-align justify
        padding-top 20px

.button
    display block
    margin auto
    margin-top 40px
    width 200px
    padding-top 15px
    padding-bottom 15px
    background-color black
    border none
    color white
    text-align center
    font-family 'Lato', sans-serif
    cursor pointer

.button:hover
    background-color #BC9D74
    transition 0.3s
    color white

.date
    text-align center
    color #B4B4B4
    font-size 12px
    margin 0
    margin-bottom 20px

footer
    margin-top 55px
    display inline-block

footer p
    text-align center
    color #B4B4B4
    margin-bottom 20px

footer ul
    width 100%
    padding 0
    margin 0

footer li
    width 16.6667%
    list-style-type none
    display inline
    float left
    padding 0
    margin 0

footer img
    max-width 100%
